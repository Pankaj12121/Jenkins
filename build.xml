<project basedir="." default="testng-execution" name="JenkinsPro">
	
	<property name ="basedir" value="." />
	<property name ="libs.dir" value="${basedir}/libs" />
	<property name ="src.dir" value="${basedir}/src" />
	<property name ="bin.dir" value="${basedir}/bin" />
	<property name ="report-dir" value="${basedir}/Test-Report" />
	<property name ="testng-report-dir" value="${basedir}/TestNGreport" />
	
	<!-- ====== Set the classpath ====  -->
		<path id="classpath">
			<pathelement location="${bin.dir}" />
			<fileset dir="${libs.dir}">
				<include name="*.jar" />
			</fileset>
		</path>
		
	   <path id="libs">
			<fileset dir="${libs.dir}">
				<include name="**/*.jar" />
			</fileset>
			<fileset dir="${env.M2_HOME}\.m2\repository">
				<include name="**/*.jar" />
			</fileset>
			<pathelement path="${basedir}/${bin.dir}"/>
		</path>
	
		<!-- Delete directories  -->
		<target name="delete-dir">
			<delete dir="${bin.dir}" />
			<delete dir="${report-dir}" />
		</target>
		
		<!-- Creating directories -->
		<target name="create" depends="delete-dir">
			<mkdir dir="${bin.dir}" />
			<mkdir dir="${report-dir}" />
		</target>
		
		<!-- Compile the java code from ${src} into ${bin} -->
		<target name="compile" depends="create">
			<javac srcdir="${src.dir}" classpathref="${libs.dir}" includeAntRuntime="No" destdir="${bin.dir}" />
			<echo> /* Compiled Directory Classes */ </echo>
		</target>
		
		<!-- Runs the file and generates Reportng report for TestNG-->
		<!--taskdef name="testng" classname="org.testng.TestNGAntTask" classpathref="classpath" /!-->
		
		<target name="testng-execution" depends="compile">
			<mkdir dir="${testng-report-dir}" />
			<testng outputdir="${testng-report-dir}" classpathref="libs" useDefaultListeners="true">
				<xmlfileset dir="${basedir}" includes="testngBenShell.xml" />
			</testng>
		</target>

</project>
